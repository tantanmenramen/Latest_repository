<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/create_recipe_bg" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />
    </FrameLayout>

    <!-- Container 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="12dp"
        android:translationZ="4dp"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Create your own recipe"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btn_next_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/maroon"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="12dp"
        android:translationZ="4dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Step 1"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="What’s the name of the food?"
                android:layout_marginTop="7dp"
                android:textSize="19sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Give your dish a name that stands out in the Christmas feast!"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:textStyle="italic"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="7dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/create_input_border"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btn_next_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/maroon"
                android:layout_gravity="end"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container 3 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="12dp"
        android:translationZ="4dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Step 2"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Give the food a short description"
                android:layout_marginTop="7dp"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="This helps users quickly understand your recipe’s charm and purpose."
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:textStyle="italic"/>
            <EditText
                android:id="@+id/desc_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="7dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/create_input_border"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:maxLength="10000"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top" />

            <TextView
                android:id="@+id/char_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000 characters left"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Choose its food category"
                android:layout_marginTop="25dp"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/create_input_border"
                android:padding="12dp"
                android:textAlignment="center"
                android:spinnerMode="dropdown" />
            <Button
                android:id="@+id/btn_next_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/maroon"
                android:layout_gravity="end"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container 4 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer4"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="12dp"
        android:translationZ="4dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Step 3"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="What are the ingredients needed"
                android:layout_marginTop="7dp"
                android:textSize="19sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Include all the ingredients so others can recreate your recipe with ease."
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:textStyle="italic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="Ingredient"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="7dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/create_input_border"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="Unit"/>
                <Spinner
                    android:id="@+id/unit_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/create_input_border"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="Quantity"/>
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="7dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/create_input_border"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_next_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/maroon"
                android:layout_gravity="end"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container 5 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="12dp"
        android:translationZ="4dp"
        android:visibility="gone"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Step 4"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="What are the equipments needed"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="This helps users prepare ahead and avoid missing essential tools during cooking."
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            android:textStyle="italic"/>
        <EditText
            android:id="@+id/equipments_input"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/create_input_border"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:maxLength="10000"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top" />

        <TextView
            android:id="@+id/char_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000 characters left"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp" />
        <Button
            android:id="@+id/btn_next_5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/maroon"
            android:layout_gravity="end"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container 6 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer6"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="12dp"
        android:translationZ="4dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Step 5"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Upload the food presentation"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="A good presentation helps your recipe stand out in the holiday collection."
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:textStyle="italic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload file"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_upload_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select image"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/gray"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"/>
                    <ImageView
                        android:id="@+id/image_preview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        android:background="@drawable/create_input_border" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload demonstration (optional)"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_upload_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select video"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/gray"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"/>

                    <VideoView
                        android:id="@+id/video_preview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        android:background="@drawable/create_input_border" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_next_6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/maroon"
                android:layout_gravity="end"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>